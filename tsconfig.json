{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/share": [
        "libs/share/src"
      ],
      "@app/share/*": [
        "libs/share/src/*"
      ],
      "@app/query-dom": [
        "libs/query-dom/src"
      ],
      "@app/query-dom/*": [
        "libs/query-dom/src/*"
      ],
      "@app/request": [
        "libs/request/src"
      ],
      "@app/request/*": [
        "libs/request/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}